<h1>Listing timelines</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Hours spent</th>
    <th>Started on</th>
  </tr>

<% @timelines.each do |timeline| %>
  <tr>
    <td><%=h timeline.description %></td>
    <td><%=h timeline.hours_spent %></td>
    <td><%=h timeline.started_on %></td>
    <td><%= link_to 'Show', timeline %></td>
    <td><%= link_to 'Edit', edit_timeline_path(timeline) %></td>
    <td><%= link_to 'Destroy', timeline, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New timeline', new_timeline_path %>