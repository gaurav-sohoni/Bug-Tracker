<h2>My Tickets</h2>

<table border=1px;  cellspacing=0px>
  <tr style="background: #CFCCCC;">
    <th>Title</th>
    <th>Description</th>
    <th>Priority</th>
	<th colspan=3>Actions</th>
  </tr>

<% @tickets.each do |ticket| %>
  <tr class="<%= cycle('odd','even') %>"> 
    <td><%=h ticket.title %></td>
    <td><%=h ticket.desciption %></td>
    <td><%=h ticket.priority %></td>
    <td><%= link_to image_tag('view.png'), ticket %></td>
    <td><%= link_to image_tag('pencil.png'), edit_ticket_path(ticket) %></td>
    <td><%= link_to image_tag('delete.png'), ticket, :confirm => "Deleting '#{ticket.title}'. Sure?", :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New ticket', new_ticket_path %>